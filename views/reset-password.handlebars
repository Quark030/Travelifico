<div class="form-wrapper flex justify-between min-h-screen bg-gray-200 p-10">
    
    <div class="form-side w-1/2 flex flex-col justify-center">
        <a href="#" title="Logo" class="mb-10">
        </a>
        <form class="my-form bg-white p-8 rounded-lg shadow-md" id="reset-password-form" action="/reset-password" method="POST">
            <div class="form-welcome-row mb-6">
                <h1 class="text-2xl font-semibold">Reset Your Password &#x1F44F;</h1>
            </div>
            <div class="text-field mb-6">
                <label for="email" class="block text-lg font-medium mb-2">Email:</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    autocomplete="off"
                    placeholder="Your Email"
                    class="border rounded-md py-2 px-3 w-full focus:border-blue-500"
                    required>
            </div>
            <button type="submit" class="my-form__button bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300 w-full mb-6">
                Reset Password
            </button>
            <div class="my-form__actions">
                <a href="reset-password.js" title="Back to Login" class="text-blue-500 hover:underline">
                    Back to Login
                </a>
            </div>
        </form>
    </div>

    <div class="info-side w-1/2 flex justify-center items-center">
        <img src="../public/images/logot.png" alt="Mock" class="mockup w-3/4 h-auto">
    </div>
</div>
<script src="../reset-password.js"></script>

